<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/img_4"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewWelcomeMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"/>


    <TextView
        android:id="@+id/textWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="53dp"
        android:text="¡BIENVENIDO!,¿QUE DESEA USTED ELEGIR?"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imagePizza"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/img_3"
        android:layout_below="@id/textWelcome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>


    <Button
        android:id="@+id/btnChoosePizza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Elegir Pizza"
        android:layout_below="@id/imagePizza"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>


    <ImageView
        android:id="@+id/imageSoda"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/img_2"
        android:layout_below="@id/btnChoosePizza"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"/>


    <Button
        android:id="@+id/btnChooseSoda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Elegir Refresco"
        android:layout_below="@id/imageSoda"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btnShowCombinedTotal"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_above="@+id/btnChoosePizza"
        android:layout_alignParentTop="true"
        android:layout_marginTop="620dp"
        android:layout_marginBottom="-344dp"
        android:text="TOTAL" />


</RelativeLayout>

