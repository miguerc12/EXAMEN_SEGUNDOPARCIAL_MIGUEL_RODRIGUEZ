<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/img_15"
    tools:context=".DrinkMenuActivity">


    <TextView
        android:id="@+id/total_price_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/delete_selection_button"
        android:layout_marginTop="-130dp"
        android:text="Total: $0"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menú de Pizzas"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"/>


    <RelativeLayout
        android:id="@+id/drink_option_1_layout"
        android:layout_width="219dp"
        android:layout_height="89dp"
        android:layout_below="@id/title"
        android:layout_marginTop="36dp">

        <Button
            android:id="@+id/drink_option_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PIZZA HAWAIANA" />

        <TextView
            android:id="@+id/price_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="4dp"
            android:text="$300"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/drink_option_2_layout"
        android:layout_width="219dp"
        android:layout_height="87dp"
        android:layout_below="@id/drink_option_1_layout"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/price_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="6dp"
            android:text="$500"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <Button
            android:id="@+id/drink_option_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:text="PIZZA PEPERONI" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/drink_option_3_layout"
        android:layout_width="217dp"
        android:layout_height="97dp"
        android:layout_below="@id/drink_option_2_layout"
        android:layout_marginTop="41dp">

        <TextView
            android:id="@+id/price_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp"
            android:text="$450"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <Button
            android:id="@+id/drink_option_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="235dp"
            android:text="PIZZA MEXICANA" />

    </RelativeLayout>

    <Button
        android:id="@+id/delete_selection_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/drink_option_3_layout"
        android:layout_marginTop="167dp"
        android:text="Eliminar Selección" />

    <Button
        android:id="@+id/pay_button_drink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Pagar" />


    <ImageView
        android:id="@+id/drink_image2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pay_button_drink"
        android:layout_alignTop="@+id/title"
        android:layout_marginStart="62dp"
        android:layout_marginTop="307dp"
        android:layout_marginBottom="253dp"
        android:layout_toEndOf="@+id/drink_option_3_layout"
        android:src="@drawable/img_14" />

    <ImageView
        android:id="@+id/drink_image"
        android:layout_width="112dp"
        android:layout_height="90dp"
        android:layout_marginStart="78dp"
        android:layout_marginTop="168dp"
        android:layout_marginBottom="393dp"
        android:layout_toEndOf="@+id/drink_option_2_layout"
        android:src="@drawable/img_12" />

    <ImageView
        android:id="@+id/drink_image3"
        android:layout_width="112dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="76dp"
        android:layout_marginTop="75dp"
        android:layout_marginBottom="393dp"
        android:layout_toEndOf="@+id/drink_option_1_layout"
        android:src="@drawable/img_13" />

    <Button
        android:id="@+id/back_button"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="236dp"
        android:layout_marginTop="572dp"
        android:text="Volver" />


</RelativeLayout>



